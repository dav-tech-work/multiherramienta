<% layout('layout') %>
<section class="whois-container">
    <h2>Consulta WHOIS</h2>
    <form id="whois-form" class="whois-form">
        <div class="form-group">
            <input type="text" name="dominio" class="form-control" placeholder="Ej: google.com" required>
            <button type="submit" class="btn btn-primary">Consultar WHOIS</button>
        </div>
    </form>

    <div id="loading" class="loading-spinner" style="display: none;">
        <div class="spinner"></div>
    </div>
    
    <div id="resultado" class="resultado-container"></div>
</section>

<% block('scripts').append('<script src="./js/servicios/whois.js"></script>') %>
